<Window x:Class="Template_4337.Sharapov_4337"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template_4337"
        mc:Ignorable="d"
        Title="Sharapov_4337" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="11*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <UniformGrid Grid.Row="0" Columns="2">
                <Button x:Name="BnExport"
Click="BnExport_Click">Экспорт в Excel</Button>
                <Button x:Name="BnImport"
Click="BnImport_Click">Импорт данных</Button>
            </UniformGrid>

        </Grid>
        
        <Grid Grid.Row="1">
            <UniformGrid Grid.Row="0" Columns="2">
                <Button x:Name="importJson"
                        Click="importJson_Click">Импорт Json</Button>
                <Button x:Name="Exword"
                        Click="Exword_Click">Экспорт в Word</Button>
            </UniformGrid>

        </Grid>
    </Grid>
</Window>
